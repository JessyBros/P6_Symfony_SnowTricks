<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Snowtricks
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
		{% block stylesheets %}{% endblock %}
		<style>
			body{
				margin: 0;
				min-height: 100vh;
				display: grid;
				grid-template-rows: auto 1fr auto;
				font-family: Segoe UI, Helvetica, Arial, sans-serif;
			}
			img{
				width:100%;
			}
			
			ul{
				list-style:none;
			}
			a{
				text-decoration:none!important;
				color:grey;
			} 
			i{
				font-size:15px;
			}
			a:hover, i:hover{
				color:#555;
				text-shadow: grey 1px 1px 2px;
			}
		</style>
	</head>
	<body>

		<header>
			<nav class="navbar navbar-expand navbar-dark bg-dark">
				<a class="navbar-brand" href="{{ path('home') }}"><img style="height:30px; width:30px;"src='/images/logo.png'/> Snowtricks</a>
				<div class="collapse navbar-collapse" id="navbarColor02">
					<ul class="navbar-nav mr-auto">
						{% if app.user %}
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('add_figure') }}">Créer une figure</a>
							<span class="sr-only">(current)</span>
						</li>
						{% endif %}
					</ul>
					<div class="my-2 my-lg-0">
						{% if not app.user %}
								<a href="{{ path('sign_in') }}"><button type="button" class="btn btn-outline-secondary m-1">se connecter</button></a>
								<a href="{{ path('sign_up') }}"><button type="button" class="btn btn-secondary m-1">s'inscrire</button></a>
						
						{% else %}
								<a href="{{ path('log_out') }}"><button type="button" class="btn btn-secondary" href="{{path('log_out')}}"><i class="fas fa-sign-out-alt"> deconnexion</i></button></a>
						{% endif %}
					</div>
				</div>
			</nav>
			
		</header>

		<section>
			{% block body %}{% endblock %}
		</section>

		<footer class="text-white bg-dark page-footer">
			<div class="footer-copyright text-center py-3">© 2020 Copyright:
				<a href="{{ path('home') }}"> Snowtricks</a>
			</div>
		</footer>

		{% block javascripts %}
			<script src="https://kit.fontawesome.com/43219f80e6.js" crossorigin="anonymous"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
            integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
            crossorigin="anonymous"></script>			
		{% endblock %}

	</body>
</html>

