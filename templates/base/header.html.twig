	<!-- mobil menu -->
	<nav class="navbar navbar-expand navbar-dark bg-dark d-flex justify-content-around row d-block d-sm-none">
		<a class="btn btn-secondary" href="{{ path('home') }}" title="Page d'accueil"><i class="fas fa-home"></i></a>			
		{% if app.user %}
			<a class=" btn btn-secondary" href="{{ path('add_figure') }}" title="Ajouter une figure"><img style="height:30px; width:30px;"src='/images/logo.png'/></a>
		{% endif %}
		{% if not app.user %}
			<a href="{{ path('sign_in') }}" title="Connexion"><i class="fas fa-sign-in-alt btn btn-secondary m-1"></i></a>
			<a href="{{ path('register') }}" title="Inscription"><i class="fas fa-user-plus btn btn-secondary m-1"></i></a>
		{% else %}
			<a href="{{ path('log_out') }}" title="Déconnexion"><i class="fas fa-sign-out-alt btn btn-secondary"></i></a>
		{% endif %}
	</nav>
	
