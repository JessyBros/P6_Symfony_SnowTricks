<header class="container-fluid w-100 position-sticky" style="top:0; z-index:1030; height:60px;">

	<!-- computer menu -->
	<nav class="navbar navbar-expand navbar-dark bg-dark row  d-none d-sm-flex">
		<a class="navbar-brand" href="{{ path('home') }}"><img style="height:30px; width:30px;" src='/images/logo.png'/> Snowtricks</a>
		<div class="collapse navbar-collapse" id="navbarColor02">
			<ul class="navbar-nav mr-auto">
				{% if app.user %}
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('add_figure') }}">Créer une figure</a>
					</li>
				{% endif %}
			</ul>
			<div class="my-2 my-lg-0">
				{% if not app.user %}
					<a href="{{ path('sign_in') }}"><button type="button" class="btn btn-secondary m-1">se connecter</button></a>
